HDFS_NAMENODE_HOST=localhost
HDFS_NAMENODE_PORT=9870
HDFS_USER=hdfs
PORT=3001
SESSION_SECRET=change-me-in-production  # required, no default

# CORS origin (optional, defaults to allow all)
# CORS_ORIGIN=https://myapp.example.com

# Local users file path (required when AUTH_MODE=local)
# LOCAL_USERS_FILE=/path/to/users.json

# User authentication mode
AUTH_MODE=local
# AUTH_MODE=ldap

# LDAP settings (required when AUTH_MODE=ldap)
LDAP_URL=
LDAP_USER_DN_PATTERN=
LDAP_STARTTLS=false
LDAP_CA_CERT=

# Maximum upload file size in bytes (default: 1073741824 = 1GB)
# MAX_UPLOAD_SIZE=1073741824

# Kerberos authentication (optional)
HDFS_AUTH=simple
HDFS_PROTOCOL=http
KRB5_PRINCIPAL=
KRB5_KEYTAB=
